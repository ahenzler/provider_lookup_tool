<h1>Search For Providers</h1>
<br>
<div class="last_name_first_name">
  <%= form_with url: "/api/v1/results", method: :get, local: true do |f| %>
    <%= f.label :search, "PROVIDER SEARCH BY FULL NAME:" %>
    <br>
    <br>
    <%= f.label :search, "First Name:" %>
    <%= f.text_field :first_name %>
    <%= f.label :search, "Last Name:" %>
    <%= f.text_field :last_name %>
    <%= f.submit "Search" %>
  <% end %>
</div>
